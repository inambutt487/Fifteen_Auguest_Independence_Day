<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.waseem.forteenaugust.SecondActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/top_two_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:weightSum="5"

            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left">

                <Button
                    android:id="@+id/rmv"
                    android:layout_width="match_parent"
                    android:background="@drawable/btndelete"
                    android:layout_height="match_parent"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="3">


                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ads:adSize="SMART_BANNER"
                    ads:adUnitId="ca-app-pub-3444255945927869/4422926322">

                </com.google.android.gms.ads.AdView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">


                <Button
                    android:id="@+id/nextbtn"
                    android:layout_width="match_parent"
                    android:background="@drawable/btnnext"
                    android:layout_height="match_parent"
                     />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/adshow_big"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-3444255945927869/4422926322">

            </com.google.android.gms.ads.AdView>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.9">


        <RelativeLayout
            android:id="@+id/save_layout_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/m_imagview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="visible" />


            <com.example.waseem.forteenaugust.DraggableImageView
                android:id="@+id/canvasImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />


            <FrameLayout
                android:id="@+id/frame_arabman"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/seatxt_arabman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25dp" />

            </FrameLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fram_layout_id"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:padding="10dp"
                        android:text="opcity"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/opacitysetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_light" />
                </LinearLayout>


                <SeekBar
                    android:id="@+id/opacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progress="100" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />


                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img9"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img10"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img11"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img12"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img13"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img14"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img15"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />


                    <ImageView
                        android:id="@+id/img16"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img17"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img18"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/img19"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:onClick="onimgclick"
                        android:padding="5dp" />




                </LinearLayout>


            </HorizontalScrollView>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/horzntal_itemz_show_block"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"

            >


            <com.example.waseem.forteenaugust.ListViewHorizontal
                android:id="@+id/horizontalEyeListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:visibility="invisible" />

            <com.example.waseem.forteenaugust.ListViewHorizontal
                android:id="@+id/horizontalStarListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />

            <com.example.waseem.forteenaugust.ListViewHorizontal
                android:id="@+id/horizontalmoonListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />

            <com.example.waseem.forteenaugust.ListViewHorizontal
                android:id="@+id/horizontalballoonListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />


        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">

        <LinearLayout
            android:id="@+id/nichy_wali_list_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:visibility="visible">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btnbackground"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                 >

                    <Button
                        android:id="@+id/eyeBtn"
                        android:layout_width="110dp"
                        android:background="@drawable/btnflag"
                        android:layout_height="match_parent"

                        />
                    <!--android:text="eye"-->

                    <!--<Button-->
                        <!--android:id="@+id/starbtn"-->
                        <!--android:layout_width="110dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="@drawable/btnstar"-->
                         <!--/>-->

                    <Button
                        android:id="@+id/fram_idz"
                        android:layout_width="110dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/frame"

                        />


                    <Button
                        android:id="@+id/moonbtn"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btnmoon"
                        />



                    <Button
                        android:id="@+id/balloonbtn"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btnbaloon"
                       />

                    <Button
                        android:id="@+id/textbtn"

                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2dp"

                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btntext"
                       />


                </LinearLayout>


            </HorizontalScrollView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/shr_save_back_list_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:visibility="gone"
            android:weightSum="3">


            <Button
                android:id="@+id/backbtn"
                android:layout_width="0dp"
                android:background="@drawable/backbtn"
                android:layout_height="match_parent"
                android:layout_weight="1"
                 />

            <Button
                android:id="@+id/sharebtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/share"
                 />

            <Button
                android:id="@+id/savebtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/save"
                />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
